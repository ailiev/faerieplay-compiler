program TestCondArray {

  type Word = Int<32`>;

  function Word main (Word x) {
    var Word[10] theArr;
    var Word y;

    if (x > 5) {
      theArr[0] = x * 2;
      theArr[1] = x;
      y = x;
    }
    else {
      theArr[0] = x;
      theArr[1] = 2*x;
      y = 2*x;
    }

    main = y + theArr[1];
  }

}
